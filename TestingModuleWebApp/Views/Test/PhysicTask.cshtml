			</div>*@

			<div>
				<label class="control-label" id="answer-label">Кинетическая энергия @time (Eₖ)</label>
				<input class="form-inputs" id="user-answer" placeholder=""/>
			</div>

			@*<div>
				<label class="control-label" id="answer-label">Изменение кинетической энергии за @time (∆Eₖ)</label>
