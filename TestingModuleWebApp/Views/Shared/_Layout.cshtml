@using Microsoft.AspNetCore.Identity
@using TestingModuleWebApp.Interfaces

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject IAppUserRepository UserRepo

@{
    var currentYear = DateTime.Now.ToString("yyyy");

    var user = new AppUser();

    if (User.Identity.IsAuthenticated)
    {
        //var managerU = await UserManager.GetUserAsync(User);
        user = await UserRepo.GetByContext(User);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Модуль тестирования</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestingModuleWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Модуль тестирования</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">На главную</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Тесты</a>
                            </li>
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Пользователи</a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tutors" asp-action="Index">Преподаватели</a>
                        </li>
                    </ul>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                @if (User.IsInRole("admin"))
                                {
                                    <label>
                                        <a class="nav-link" asp-area="" asp-controller="AdminPanel" asp-action="Index">Admin</a>
                                    </label>
                                }
                                else
                                {
                                    <label>
                                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Index">
                                            @user.FirstName @user.LastName @user.Group?.Title</a>
                                    </label>
                                }
                                <span>&nbsp;|&nbsp;</span>
                                <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">Выйти</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Register">Регистрация</a>
                                <span>&nbsp;|&nbsp;</span>
                                <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Login">Войти</a>
                            </li>
                        </ul>
                    }
                 </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @currentYear - Модуль тестирования - <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
